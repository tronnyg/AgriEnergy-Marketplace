
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/Styles/Components/login.css" />
    <title>Login</title>
</head>
<body class="login">
    <div class="box">
        <div class="rectangle">
            <div class="label login">LOGIN</div>

            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                <input class="input-field username" placeholder="Username" name="username" type="text" />
                <input class="input-field password" placeholder="Password" name="password" type="password" />
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="rememberMe">
                    <label class="form-check-label" for="rememberMe">
                        Remember me
                    </label>
                </div>
                <button class="button" type="submit"><div class="text-wrapper">Sign in</div></button>
            }
        </div>
    </div>
</body>
</html>