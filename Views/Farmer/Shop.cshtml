
@{
    ViewBag.Title = "Shop";
}
@model AgriEnergy_WebApp.Models.StoreViewModel 

<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/Styles/store-style.css" />
    <title>Shop</title>
</head>
<body>
    <section class="py-5 text-center container shop-header">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
            </div>
        </div>
    </section>

    <section class="store-details px-5 py-3">
        <div class="container store-container">
            <div class="store-info">
                <img src="https://st4.depositphotos.com/10025332/27320/v/450/depositphotos_273208912-stock-illustration-vector-farmers-market-stall-icon.jpg" alt="Store Logo" class="store-logo">
                <div class="store-text">
                    <h1 class="store-name">@Model.farmer.FarmName</h1>
                    <p class="store-description">@Model.farmer.AboutFarm</p>
                    <p class="store-location">@Model.farmer.FarmLocation</p>
                    <p class="store-sales">Star Seller | 118,582 Sales</p>
                    <div class="store-rating">
                        <span>★★★★★</span>
                    </div>
                </div>
            </div>
            <div class="owner-info">
                <img src="https://cdn.icon-icons.com/icons2/2468/PNG/512/user_icon_149329.png" alt="Owner Logo" class="owner-logo">
                <div class="owner-text">
                    <h2 class="owner-name">@Model.farmer.User.Name</h2>
                    <button class="contact-btn">Contact</button>
                </div>
            </div>
        </div>
    </section>

    <div class="album py-5 px-5 bg-body-tertiary">
        <div class="container product-list">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">

            @foreach (var product in Model.Products)
            {
                <div class="col product">
                    <div class="card shadow-sm">
                        <!-- Product Image -->
                        <svg class="bd-placeholder-img card-img-top" width="100%" height="225" alt="Product Name" >
                            <image xlink:href="@product.ImageUrl" width="100%" height="225" />
                        </svg>
                        <div class="card-body">
                            <!-- Product Name -->
                            <h5 class="card-title product-name">@product.Name</h5>
                            <!-- Product Price -->
                            <p class="card-text price">$@product.Price</p>
                            <!-- Product Description -->
                            <p class="card-text description">@product.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                            </div>
                        </div>
                    </div>
                </div>
            }
            </div>
        </div>
    </div>
</body>
</html>

<style>

    .card-title {
        font-size: 1.25rem; 
        font-weight: bold; 
        margin-bottom: 0.5rem; 
    }

    .card-text {
        font-size: 1rem; 
        color: #6c757d; 
        margin-bottom: 1rem; 
    }

    .card-text.price {
        font-size: 1.1rem; 
        font-weight: bold; 
        color: #28a745; 
    }

    .card-text.description {
        line-height: 1.5; 
    }
</style>
